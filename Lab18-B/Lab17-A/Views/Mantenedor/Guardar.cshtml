@model EnfermedadModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <h5 class="card-header">Registrar Enfermedad</h5>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Mantenedor" method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" asp-for="Nombre">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Tasa de Mortalidad</label>
                <input type="text" class="form-control" asp-for="TasaMortalidad">
                <span asp-validation-for="TasaMortalidad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Sintoma de la enfermedad</label>
                <input type="text" class="form-control" asp-for="Sintoma">
                <span asp-validation-for="Sintoma" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Medicamento para la enfermedad</label>
                <input type="text" class="form-control" asp-for="Medicamento">
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Registrar </button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning"><i class="bi bi-arrow-return-left"></i> Volver a la lista </a>
        </form>
    </div>
</div>

