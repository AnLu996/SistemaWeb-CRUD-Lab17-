@using System.Security.Policy;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <style>
        .btn-color {
            background-color: #0e1c36;
            color: #fff;
        }

        .profile-image-pic {
            height: 200px;
            width: 200px;
            object-fit: cover;
        }

        .cardbody-color {
            background-color: #ebf2fa;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card my-5">

                    <form class="card-body cardbody-color" action="@Url.Action("Login", "Mantenedor")" method="post">
                        <h2 class="text-center text-dark mt-3 fw-bold">Iniciar Sesión</h2>

                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="100px" alt="profile">
                        </div>

                        <div class="mb-3">
                            <input type="text" class="form-control" id="Username" name="perfil" placeholder="Nombre de usuario">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="contraseña" placeholder="Contraseña">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-color px-5 mb-3 w-100">Ingresar</button>
                        </div>
                        <div id="emailHelp" class="form-text text-center mb-3 text-dark">
                            ¿No estás regitrado aún? <a href="@Url.Action("Registrar", "Mantenedor")" class="text-dark fw-bold"> Regístrate! </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
